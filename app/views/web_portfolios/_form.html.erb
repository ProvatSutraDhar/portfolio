<%= form_with(model: web_portfolio) do |form| %>
  <% if web_portfolio.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(web_portfolio.errors.count, "error") %> prohibited this web_portfolio from being saved:</h2>

      <ul>
        <% web_portfolio.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row gy-3">

    <div  class="col-md-4">
      <div class="form-group">
        <%= form.text_field :title, class:"form-control",placeholder:"Portfolio title",required:true %>
      </div>
    </div>

  <div class="col-md-4">
    <div class="form-group">
      <%= form.text_field :subtitle, class:"form-control",placeholder:"Portfolio subtitle",required:true %>
    </div>
  </div>

  <div class="col-md-4">
    <div class="form-group">
      <div class="form-control">
        <%= form.select :portfolio_type, options_for_select(['Web', 'ML', 'App','Data Mining'])%>
      </div>
      </div>
  </div>
  <div class="col-md-4">
    <div class="form-group">
      <%= form.select :language, options_for_select(['Ruby', 'Python', 'R','Java','Php'])%>
    </div>
  </div>
  <div class="col-md-4">
    <div class="form-group">
      <%= form.text_field :libraries, class:"form-control",placeholder:"libraries used",required:true %>
    </div>
  </div>

  <div class="col-md-4">
    <div class="form-group">
    <%= form.text_field :client_side, class:"form-control",placeholder:" Client side language",required:true %>
  </div>
  </div>

  <div class="col-md-4">
    <div class="form-group">
    <%= form.text_field :server_side , class:"form-control",placeholder:" Server side language",required:true %>
  </div>
  </div>

  <div class="col-md-4">
    <div class="form-group">
    <%= form.text_field :database, class:"form-control",placeholder:" Database use",required:true %>
  </div>
</div>

  <div class="col-lg-12">
    <%= form.text_area :description, class:"form-control", placeholder:"Abstract/Objectives", required:true %>
  </div>

  <div class="col-md-6">
    <div class="form-group">

    <%= form.text_field :url, class:"form-control", placeholder:"URL(if any)", required:false %>
  </div>
  </div>

  <div class="col-md-6">
    <div class="form-group">
    <%= form.file_field :photo, class:"form-control" %>
      <%= form.hidden_field :photo_cache %>

      <%if @web_portfolio.photo.present?%>
      <%=image_tag @web_portfolio.photo.thumb.url%>
      <%end%>
  </div>
  </div>

  <div>
    <%= form.submit class:"btn btn-default" %>
  </div>
<% end %>
