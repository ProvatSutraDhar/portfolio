
  <div class="row gy-3">
    <%= form_with(model: @contact) do |f| %>

    <% if  @contact.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize( @contact.errors.count, "error") %> prohibited this blog from being saved:</h2>
        <ul>
          <%  @contact.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <div class="col-md-12">
    <div class="form-group">
      <%= f.text_field  :name, required: true, class: "form-control",  placeholder: "Your Name" %>
    </div>
  </div>

  <div class="col-md-12">
    <div class="form-group">
      <%= f.text_field  :email, required: true, class: "form-control",  placeholder: "Your Email" %>
    </div>
  </div>

  <div class="col-lg-12">
    <div class="form-group">
      <%= f.text_field  :subject, required: true, class: "form-control",  placeholder: "Subject" %>
    </div>
  </div>

  <div class="col-lg-12">
    <div class="form-group">
      <%= f.text_area  :message, required: true, class: "form-control",  placeholder: "Your message..."%>
    </div>
  </div>

  <div class="col-lg-12">
     <div class="loading"></div>
     <div class="error-message">
<p style="color: green"><%= notice %></p>
     </div>
     <div class="sent-message">
     <p style="color: green"><%= notice %></p></div>
   </div>

    <div class="mt-0">
      <%= f.submit 'Send Message', class: 'btn btn-default' %>
   </div>
  <% end %>
</div>
